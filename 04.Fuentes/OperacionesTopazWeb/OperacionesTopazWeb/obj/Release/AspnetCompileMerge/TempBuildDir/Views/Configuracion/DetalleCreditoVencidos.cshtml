@*SNM INICIO *@
 
<div id="dv_ibox" class="cssBox" style="width:70%">
    <div class="titulo">
        Filtros opcionales Afectaciones Masivas

    </div>
    <div class="cuerpo cssAlignLeft">
        <div class="css-div-form css-div-form-6">
            <div class="css-div-form css-div-form-3">
                <div class="css-div-form css-div-form-7">
                    <label>Dias de atraso:&nbsp&nbsp&nbsp&nbsp</label>
                    <input type="text" id="txtDiasAtraso" value="@Model.iDiasAtraso" placeholder="[ 1 ]" maxlength="4" style="width: 20%; text-align: center">
                </div>
                <div class="css-div-form css-div-form-4">

                </div>
            </div>
            <div class="css-div-form css-div-form-2">
                <div class="css-div-form css-div-form-2">
                    <label>Filtro Monto Minimo:  </label>
                </div>
                <div class="css-div-form css-div-form-7">
                    <input type="text" id="txtMontoMinimo" value="@Model.nMontoMinimo" placeholder="[ 00.0 ]" maxlength="3" style="width: 25%; text-align: center">
                </div>
            </div>
        </div>
    </div>
</div>
