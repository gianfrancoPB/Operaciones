@model OperacionesTopazWeb.wsCondicion.EnCondicion

@{
    ViewBag.sSubTitulo = "Condiciones Detalles";
}






<div id="dv_ibox" class="cssBox" style="width:50%">
    <div class="titulo">
        Datos de Tabla
        <div class="right">
            <input type="button" class="css-boton css-boton-md css-boton-verde" id="btnGuardar" onclick="javascript: fn_GuardarProducto();" value="Grabar" />
            <input type="button" class="css-boton css-boton-md css-boton-blanco" id="btnLimpiar" onclick="javascript: fn_Volver();" value="Volver" />
        </div>
    </div>
    <div class="cuerpo cssAlignLeft">
        <div class="css-div-form css-div-form-6">

            <div class="css-div-form css-div-form-2">
                <label>Código:</label>
            </div>
            <div class="css-div-form css-div-form-3">
                <input type="text" maxlength="30" class="css-input" id="txtTabla" value="@Model.iIdCondicion" disabled>
                <input type="hidden" id="siCodigoTabla" value="@Model.iIdCondicion" />
            </div>
            <br />
            <div class="css-div-form css-div-form-2">
                <label>Condición:</label>
            </div>
            <div class="css-div-form css-div-form-3">
                <input type="text" maxlength="30" class="css-input" id="txtSistema" value="@Model.vCondicion" disabled>
            </div>
            <br />
            <div class="css-div-form css-div-form-2">
                <label>Descripción:</label>
            </div>
            <div class="css-div-form css-div-form-3">
                <input type="text" maxlength="30" class="css-input" id="txtDescripción" value="@Model.vDescripcion" disabled>
            </div>


        </div>
    </div>
</div>
